{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/server/server.ts",
            "preLaunchTask": "tsc: build - server/tsconfig.json",
            "outFiles": ["${workspaceFolder}/server/out/**/*.js"]            
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Webpack",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "env": {}
          }

    ]
}